<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender with ANSI color codes -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define the appender for the ImdbException class -->
    <appender name="IMDB_EXCEPTION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/imdb_exception.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/imdb_exception.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- File Appender for SQL Errors -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/sql-errors.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define the logger for the ImdbException class -->
    <logger name="fr.diginamic.imdb.utils.ImdbException" level="ERROR" additivity="false">
        <appender-ref ref="IMDB_EXCEPTION_FILE" />
    </logger>

    <!-- Logger for Hibernate SQL Errors -->
    <logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="ERROR" additivity="false">
        <appender-ref ref="SQL_FILE" />
    </logger>


    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>